@model IEnumerable<User>
@{ 
    ViewData["Title"] = "Admin";
}

@if (Model?.Count() > 0)
{
    var count = 0;
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Display</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@u.FullName</td>
                    <td>@u.Email</td>
                    <td>@u.DisplayName</td>
                    <td>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <a class='btn btn-light' asp-action="EditRoles" asp-route-id="@u.Id"><i class="fas fa-edit"></i></a>
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
<div>No users.</div>
}
