@model IEnumerable<Article>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-3 border-bottom">
    <h1 class="display-4">The Juice Press</h1>
    <p>Here to bring you the daily squeeze.</p>
</div>

@if (Model?.Count() > 0)
{
    <div class="row">
    @{
        var headline = Model.FirstOrDefault(x => x.CoverImage != null);
        var remainder = Model.ToList() ;
        }
        @if(headline != null)
        {
            remainder = remainder.Skip(1)?.ToList();
        <div class="col-12 col-lg-6">
            <div class="row mb-3 pb-3 border-bottom">
                <div class="col">
                    <a class="article-link" asp-action="details" asp-controller="articles" asp-route-id="@headline.ArticleId">
                        <img src="@headline.CoverImage.Url" class="img-fluid d-inline-block m-auto" style="max-height: 300px;" />
                        <div class="h2 text-justify">@headline.Title</div>
                        <div class="overflow-hidden" style="max-height: 6rem">@Html.Raw(headline.Content)</div>
                    </a>
                </div>
            </div>
        </div>

        }
        @if(remainder?.Count() > 0)
        {
            <div class="col-12 col-lg-6">
                @foreach(var r in remainder)
                {
                    <div class="row mb-3 pb-3 border-bottom">
                        <div class="col">
                            <a class="article-link" asp-action="details" asp-controller="articles" asp-route-id="@r.ArticleId">
                                <div class="h2 text-justify">@r.Title</div>
                                <div class="overflow-hidden" style="max-height: 3rem">@Html.Raw(r.Content)</div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }


  </div>
}