@model News_Website.Models.AnswerViewModel
@{ 
    Layout = null;
}
<div class="row">
    <form asp-action="_EditAnswer" class="col">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="QuizId" />
        <input type="hidden" asp-for="QuestionId" />
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="Answer" class="control-label"></label>
                    <input asp-for="Answer" class="form-control" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h6>Result weights for this answer</h6>
            </div>
        </div>
        @if (Model.Weights?.Count() > 0)
        {
            foreach (var w in Model.Weights)
            {
                <div class="row weight-row" data-id="@w.ResultId">
                    <div class="col">
                        @w.ResultTitle
                    </div>
                    <div class="col-auto answer-weight-editor-column">
                        @Html.LabelFor(x => w.Weight)
                        @Html.TextBoxFor(x => w.Weight, htmlAttributes: new { @class = "answer-weight-editor form-control" })
                        @Html.ValidationMessageFor(x => w.Weight)
                    </div>
                    @*<div class="col-auto">

                    </div>*@
                </div>
            }
        }
        else
        {
            <div class="row">
                <div class="col-12">
                    <p>Add quiz results to in the <b>Results</b> tab to configure weighted answers.</p>
                </div>
            </div>
        }
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    </div>

