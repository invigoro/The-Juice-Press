<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if(ViewData["IsArticle"] != null) {
        <meta property="og:site_name" content="satire" />
        <meta property="og:image" content='@(ViewData["CoverImage"] ?? "")' />
    }

    <title>@ViewData["Title"] - The Juice Press</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/lib/summernote/summernote-bs4.min.css" />
    <link rel="icon" href="~/img/orange-icon.png" />
    <script src="https://kit.fontawesome.com/17ed756882.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/orange-logo-2.png" id="navbar-logo" style="max-height: 60px; background-color: transparent !important;" />
                    <div>The Juice Press</div>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <partial name="_LoginPartial" />
                    }
                    <form class="form-inline my-2 my-lg-0" asp-action="search" asp-controller="articles">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-dark" type="submit"><i class="fas fa-lg fa-search" title="Search"></i></button>
                    </form>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Articles" asp-action="List" asp-route-id="latest">Latest</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 mt-4">
            <div class="row d-flex flex-row justify-content-center">
                <div class="col-12 col-md-11 col-lg-10 col-xl-9">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2020 | The Juice Press | <a asp-controller="Home" asp-action="Privacy">Privacy</a> | <a asp-controller="Home" asp-action="Disclaimer">Disclaimer</a> | <a asp-controller="Home" asp-action="TermsOfUse">Terms of Use</a> | <a asp-controller="Home" asp-action="Contact">Contact</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/summernote/summernote-bs4.min.js"></script>
    <script src="~/lib/summernote-image-attributes-master/summernote-image-attributes.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
